model FileUpload {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int // Size in bytes
  path         String
  url          String?
  uploadedBy   String? // User ID
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([uploadedBy])
  @@map("file_uploads")
}
